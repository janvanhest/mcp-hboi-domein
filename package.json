{
  "name": "mcp-hboi-domein",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "prebuild": "yarn generate-types",
    "build": "vite build",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist node_modules/.vite",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-types": "tsx scripts/generate-types.ts",
    "generate-types:watch": "tsx scripts/generate-types.ts --watch",
    "docker:build": "docker build -t hboi-mcp-server:latest .",
    "docker:run": "docker run --rm -i hboi-mcp-server:latest",
    "docker:test": "docker run --rm hboi-mcp-server:latest node -e \"console.log('MCP Server is working!')\""
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-util": "30.2.0",
    "json-schema-to-typescript": "^15.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "packageManager": "yarn@4.10.3",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
